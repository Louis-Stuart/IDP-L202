//define constant

int lineSensors[4];
int lowSpeed = 0;
int highSpeed = 250;
int medSpeed = 90;
char forward = BACKWARD;
char backward = FORWARD;
int routeCounter = 0;
int delivCounter = 0;
bool green = true;
bool block = false;
int posGripperOpen = 5;
int posGripperClose = 90;
int posLiftUp = 140;
int posLiftDown = 50;
int posCurrentGripper = 0;
int posCurrentLift = 0;

//predefining navigation arrays

char testRoute[] = {'R', 'L', 'S', 'S' };
char startP1[] = {'L', 'R', 'X'};
char P1Green[] = {'N', 'L', 'W'};
char P1Red[] = {'M', 'S', 'R', 'W'};
char greenP2[] = {'Z', 'S', 'R', 'R', 'X'};
char redP2[] = {'Z', 'S', 'S', 'L', 'R', 'X'};
char P2Green[] = {'M', 'L', 'S', 'S', 'W'};
char P2Red[] = {'N', 'R', 'S', 'S', 'S', 'W'};
char greenP3[] = {'Z', 'S', 'S', 'R', 'X'};
char redP3[] = {'Z', 'S', 'L', 'X'};
char P3Green[] = {'M', 'S', 'S', 'S', 'W'};
char P3Red[] = {'N', 'S', 'S', 'W'};
char greenP4[] = {'Z','R', 'S', 'R', 'X'};
char redP4[] = {'Z', 'L', 'L', 'X'};
char P4Green[] = {'M', 'S', 'L', 'S', 'W'} ;
char P4Red[] = {'N', 'R', 'S', 'W'};
char redFinish[] = {'Z', 'L', 'L', 'X'};
char greenFinish[] = {'Z', 'R', 'S', 'R', 'X'};


char *action;

